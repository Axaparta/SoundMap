<UserControl
	x:Class="SoundMap.Controls.SoundPointControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	mc:Ignorable="d" 
	Name="This"
	d:DesignHeight="150" d:DesignWidth="150">
	<StackPanel Orientation="Vertical">
		<StackPanel.Resources>
			<Style TargetType="Label">
				<Setter Property="Padding" Value="0" />
				<Setter Property="Margin" Value="3,0,5,5" />
			</Style>
			<Style x:Key="HeaderLabel" TargetType="Label">
				<Setter Property="HorizontalAlignment" Value="Right" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="Margin" Value="3,0,5,5" />
			</Style>
			<Style TargetType="CheckBox">
				<Setter Property="Margin" Value="3,0,5,5" />
			</Style>
		</StackPanel.Resources>

		<DockPanel>
			<Label Style="{StaticResource HeaderLabel}" Content="Frequency" Grid.Row="0" Grid.Column="0" />
			<Label Content="{Binding ElementName=This, Path=Point, FallbackValue='-'}" Grid.Row="0" Grid.Column="1"  />
		</DockPanel>
		<CheckBox Content="Mute" IsChecked="{Binding ElementName=This, Path=Point.IsMute, FallbackValue=False}" IsEnabled="{Binding ElementName=This, Path=IsPointEnabled}" />
		<CheckBox Content="Solo" IsChecked="{Binding ElementName=This, Path=Point.IsSolo, FallbackValue=False}" IsEnabled="{Binding ElementName=This, Path=IsPointEnabled}" />
	</StackPanel>
</UserControl>
