<UserControl
	x:Class="SoundMap.Controls.SoundPointControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:SoundMap"
	mc:Ignorable="d" 
	Name="This"
	d:DesignHeight="50" d:DesignWidth="250">
	<StackPanel Orientation="Horizontal">
		<StackPanel.Resources>
			<Style TargetType="Label">
				<Setter Property="Padding" Value="0" />
				<Setter Property="Margin" Value="3,0,5,5" />
			</Style>
			<Style x:Key="HeaderLabel" TargetType="Label">
				<Setter Property="HorizontalAlignment" Value="Right" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="Margin" Value="3,0,5,5" />
			</Style>
			<Style TargetType="CheckBox">
				<Setter Property="Margin" Value="3,0,5,5" />
			</Style>
		</StackPanel.Resources>

		<Label VerticalAlignment="Center" Foreground="{Binding ElementName=This, Path=Foreground}" Style="{StaticResource HeaderLabel}" Content="Frequency" Grid.Row="0" Grid.Column="0" Margin="3,-1,5,6" />
		<Grid VerticalAlignment="Center" Width="45" Height="20" >
			<Label
				HorizontalContentAlignment="Left"
				VerticalContentAlignment="Center"
				Foreground="{Binding ElementName=This, Path=Foreground}"
				Content="{Binding ElementName=This, Path=Point, FallbackValue='-'}" />
			<Rectangle Stroke="{Binding ElementName=This, Path=Foreground}" />
		</Grid>
		
		<CheckBox
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			Foreground="{Binding ElementName=This, Path=Foreground}"
			Content="Mute"
			IsChecked="{Binding ElementName=This, Path=Point.IsMute, FallbackValue=False}"
			IsEnabled="{Binding ElementName=This, Path=IsPointEnabled}" />
		<CheckBox
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			Foreground="{Binding ElementName=This, Path=Foreground}"
			Content="Solo"
			IsChecked="{Binding ElementName=This, Path=Point.IsSolo, FallbackValue=False}"
			IsEnabled="{Binding ElementName=This, Path=IsPointEnabled}" />
		<ComboBox
			SelectedValuePath="Key"
			SelectedValue="{Binding ElementName=This, Path=Point.Kind}"
			DisplayMemberPath="Value"
			ItemsSource="{x:Static local:SoundPoint.PointKinds}" VerticalAlignment="Center" Width="70" />
	</StackPanel>
</UserControl>
