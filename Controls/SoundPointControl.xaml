<UserControl
	x:Class="SoundMap.Controls.SoundPointControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:SoundMap"
	mc:Ignorable="d" 
	Name="This"
	MinWidth="150"
	d:DesignHeight="350" d:DesignWidth="150">
	<Grid Margin="5,5,5,0">
		<Grid.Resources>
			<Style x:Key="BaseStyle" TargetType="Control">
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="Foreground">
					<Setter.Value>
						<Binding ElementName="This" Path="Foreground" />
					</Setter.Value>
				</Setter>
			</Style>
			<Style x:Key="LeftBaseStyle" TargetType="Control" BasedOn="{StaticResource BaseStyle}">
				<Setter Property="Margin" Value="0,0,3,5" />
				<Setter Property="HorizontalAlignment" Value="Right" />
			</Style>
			<Style x:Key="RightBaseStyle" TargetType="Control" BasedOn="{StaticResource BaseStyle}">
				<Setter Property="Margin" Value="0,0,0,5" />
				<Setter Property="HorizontalAlignment" Value="Stretch" />
			</Style>
			
			<Style x:Key="HeaderLabel" TargetType="Label" BasedOn="{StaticResource LeftBaseStyle}">
				<Setter Property="Padding" Value="0" />
			</Style>

			<Style TargetType="CheckBox" BasedOn="{StaticResource RightBaseStyle}">
				<Setter Property="Height" Value="20" />
				<Setter Property="VerticalContentAlignment" Value="Center" />
			</Style>
		</Grid.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label
			Grid.Row="0"
			Grid.Column="0"
			Style="{StaticResource HeaderLabel}"
			Content="Frequency"/>
		<TextBox
			Grid.Row="0"
			Grid.Column="1"
			Style="{StaticResource RightBaseStyle}"
			Text="{Binding ElementName=This, Mode=OneWay, Path=Point, FallbackValue='-'}"
			IsReadOnly="True" />

		<CheckBox
			Grid.Row="1"
			Grid.Column="1"
			Content="Mute"
			IsChecked="{Binding ElementName=This, Path=Point.IsMute, FallbackValue=False}"
			IsEnabled="{Binding ElementName=This, Path=IsPointEnabled}" />

		<CheckBox
			Grid.Row="2"
			Grid.Column="1"
			Content="Solo"
			IsChecked="{Binding ElementName=This, Path=Point.IsSolo, FallbackValue=False}"
			IsEnabled="{Binding ElementName=This, Path=IsPointEnabled}" />

		<Label
			Grid.Row="3"
			Grid.Column="0"
			Style="{StaticResource HeaderLabel}"
			Content="Waveform"/>

		<ComboBox
			Grid.Row="3"
			Grid.Column="1"
			Style="{StaticResource RightBaseStyle}"
			SelectedValuePath="Name"
			SelectedValue="{Binding ElementName=This, Path=Point.WaveformName}"
			DisplayMemberPath="Name"
			ItemsSource="{x:Static local:Waveform.BuildinWaveForms}" />

		<Label
			Grid.Row="4"
			Grid.Column="0"
			Style="{StaticResource HeaderLabel}"
			Content="LRDelta: " />
		<TextBox
			Grid.Row="4"
			Grid.Column="1"
			Style="{StaticResource RightBaseStyle}"
			Text="{Binding Mode=TwoWay, ElementName=This, Path=Point.LeftFrequencyDelta}" />
	</Grid>
</UserControl>
