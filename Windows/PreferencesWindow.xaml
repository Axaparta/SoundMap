<Window
	x:Class="SoundMap.Windows.PreferencesWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:SoundMap.Windows"
	xmlns:settings="clr-namespace:SoundMap.Settings"
	mc:Ignorable="d"
	SizeToContent="Height"
	Title="Preferences" Height="168" Width="414" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
	<Window.Background>
		<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}"/>
	</Window.Background>
	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.Resources>
				<Style x:Key="TitleLabel" TargetType="Label">
					<Setter Property="Padding" Value="0" />
					<Setter Property="Margin" Value="0,0,5,5" />
					<Setter Property="VerticalContentAlignment" Value="Center" />
					<Setter Property="HorizontalAlignment" Value="Right" />
				</Style>
				<Style TargetType="ComboBox">
					<Setter Property="Margin" Value="0,0,0,5" />
				</Style>
			</Grid.Resources>

			<Label Content="Audio output" Style="{StaticResource TitleLabel}" />
			<ComboBox Grid.Row="0" Grid.Column="1"
								ItemsSource="{x:Static settings:PreferencesSettings.AudioOutputs}"
								DisplayMemberPath="Name"
								SelectedItem="{Binding SelectedAudioOutput}" />
			<!--<ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />-->
			<UniformGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Columns="4">
				<Label Style="{StaticResource TitleLabel}" Content="Sample rate" />
				<ComboBox
					ItemsSource="{x:Static settings:PreferencesSettings.SampleRates}"
					SelectedItem="{Binding SampleRate}"/>
				<Label Style="{StaticResource TitleLabel}" Content="Latency" />
				<TextBox
					VerticalAlignment="Center"
					Text="{Binding Latency, Mode=TwoWay}"/>
			</UniformGrid>

			<Label Grid.Row="2" Grid.Column="0" Content="MIDI input" Style="{StaticResource TitleLabel}" />
			<ComboBox Grid.Row="2" Grid.Column="1" />
		</Grid>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<StackPanel.Resources>
				<Style TargetType="Button">
					<Setter Property="Width" Value="80" />
					<Setter Property="Height" Value="26" />
					<Setter Property="Margin" Value="5,0,0,0" />
				</Style>
			</StackPanel.Resources>
			<Button Content="OK" IsDefault="True" Click="OkButton_Click"/>
			<Button Content="Cancel" IsCancel="True" />
		</StackPanel>
	</Grid>
</Window>
