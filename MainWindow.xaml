<Window
	x:Class="SoundMap.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:SoundMap"
	mc:Ignorable="d"
	Closed="Window_Closed"
	WindowStartupLocation="CenterScreen"
	Title="SoundMap" Height="450" Width="800">
	<Window.Background>
		<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
	</Window.Background>
	<Window.InputBindings>
		<KeyBinding Key="Esc" Command="{Binding ExitCommand}"/>
	</Window.InputBindings>
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="New project" Command="{Binding NewProjectCommand}" />
				<MenuItem Header="Open project..." />
				<MenuItem Header="Save project" />
				<MenuItem Header="Save project as..." />
				<Separator />
				<MenuItem Header="Exit" InputGestureText="Esc" Command="{Binding ExitCommand}" />
			</MenuItem>
		</Menu>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*"/>
				<RowDefinition Height="1*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="150"/>
			</Grid.ColumnDefinitions>

			<DockPanel Margin="5" Grid.Column="1" LastChildFill="False" Grid.RowSpan="2">
				<ComboBox
				Margin="0, 0, 0, 5"
				DockPanel.Dock="Top"
				ItemsSource="{Binding Devices}"
				SelectedItem="{Binding SelectedDevice}" />

				<Button
				Margin="0, 0, 0, 5"
				DockPanel.Dock="Top" Content="Start/Stop" Command="{Binding StartStopCommand}" />

				<Button
				Margin="0, 0, 0, 5"
				DockPanel.Dock="Top" Content="Save..." Command="{Binding SaveCommand}" />

				<Button
				Margin="0, 0, 0, 5"
				DockPanel.Dock="Top" Content="Load..." Command="{Binding LoadCommand}" />
			</DockPanel>

			<local:SoundControl
				AddPointEvent ="{Binding SoundControlAddPointAction}"
				DeletePointEvent="{Binding SoundControlDeletePointAction}"
				SnapsToDevicePixels="True"
				Points="{Binding Points}"
				Margin="5, 5, 0, 5"
				Grid.Column="0" />

			<ListBox
			Grid.Row="1"
			HorizontalAlignment="Left"
			Margin="5, 0, 5, 5"
			Width="150"
			ItemsSource="{Binding Points}" />

			<Button
			Command="{Binding ClearCommand}"
			Grid.Row="1"
			HorizontalAlignment="Left"
			Content="Clear" Margin="160,0,0,180" Width="82" />
		</Grid>
	</DockPanel>
	
</Window>
